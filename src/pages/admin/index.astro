---
import DashboardHeader from '../../components/DashboardHeader.astro';
import Sidebar from '../../components/Sidebar.astro';
import ConnectionStatus from '../../components/ConnectionStatus.astro';
import CacheStats from '../../components/CacheStats.astro';
import UserActivityDashboard from '../../components/UserActivityDashboard.astro';
import { PrismaClient } from '../../lib/prisma-adapter.js';

// Verificar autenticación
const prisma = new PrismaClient();

const userCount = await prisma.user.count();
const deviceCount = await prisma.device.count();
const alertCount = await prisma.alert.count({ where: { status: 'active' } });
const loanCount = await prisma.loan.count({ where: { status: 'active' } });

// Obtener métricas del sistema
const systemMetrics = await prisma.systemMetric.findMany();

// Verificar si el usuario está autenticado
const user = Astro.locals.user;
if (!user || user.role !== 'ADMIN') {
  return Astro.redirect('/login?message=Acceso+restringido');
}
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Administración | ExoticEquator</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body class="flex h-screen bg-gray-100 dark:bg-gray-900">
    <Sidebar activePage="admin" />
    
    <div class="flex-1 flex flex-col overflow-hidden">
        <DashboardHeader title="Panel de Administración" user={user} />
        
        <main class="flex-1 overflow-y-auto p-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-4">
                    <h3 class="text-lg font-medium text-gray-800 dark:text-white">Usuarios</h3>
                    <p class="text-3xl font-bold text-blue-600 dark:text-blue-400">{userCount}</p>
                </div>
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-4">
                    <h3 class="text-lg font-medium text-gray-800 dark:text-white">Dispositivos</h3>
                    <p class="text-3xl font-bold text-green-600 dark:text-green-400">{deviceCount}</p>
                </div>
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-4">
                    <h3 class="text-lg font-medium text-gray-800 dark:text-white">Alertas Activas</h3>
                    <p class="text-3xl font-bold text-red-600 dark:text-red-400">{alertCount}</p>
                </div>
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-4">
                    <h3 class="text-lg font-medium text-gray-800 dark:text-white">Préstamos Activos</h3>
                    <p class="text-3xl font-bold text-yellow-600 dark:text-yellow-400">{loanCount}</p>
                </div>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <ConnectionStatus />
                <CacheStats />
            </div>
            
            <div class="mt-6">
                <h2 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">Actividad del Sistema</h2>
                {user && <UserActivityDashboard userId={user.id} limit={10} />}
            </div>
            <div class="mb-6">
                <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Panel de Administración</h1>
                <p class="text-gray-600 dark:text-gray-300">Gestiona tu sistema y usuarios desde aquí</p>
            </div>
            
            <!-- Tarjetas de resumen -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-2">Usuarios</h3>
                    <p class="text-3xl font-bold text-blue-600 dark:text-blue-400">{userCount}</p>
                    <a href="/admin/users" class="text-sm text-blue-500 dark:text-blue-300 hover:underline mt-2 block">
                        Gestionar usuarios →
                    </a>
                </div>
                
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-2">Dispositivos</h3>
                    <p class="text-3xl font-bold text-green-600 dark:text-green-400">{deviceCount}</p>
                    <a href="/devices" class="text-sm text-blue-500 dark:text-blue-300 hover:underline mt-2 block">
                        Ver inventario →
                    </a>
                </div>
                
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-2">Préstamos Activos</h3>
                    <p class="text-3xl font-bold text-amber-600 dark:text-amber-400">{loanCount}</p>
                    <a href="/loans" class="text-sm text-blue-500 dark:text-blue-300 hover:underline mt-2 block">
                        Ver préstamos →
                    </a>
                </div>
                
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-2">Alertas</h3>
                    <p class="text-3xl font-bold text-red-600 dark:text-red-400">{alertCount}</p>
                    <a href="/alerts" class="text-sm text-blue-500 dark:text-blue-300 hover:underline mt-2 block">
                        Ver alertas →
                    </a>
                </div>
            </div>
            
            <!-- Enlaces rápidos a funciones administrativas -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
                <div class="p-6">
                    <h2 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">Gestión Administrativa</h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <a href="/admin/users" class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg border border-gray-200 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-600 transition">
                            <h3 class="font-semibold text-gray-800 dark:text-white">Usuarios</h3>
                            <p class="text-sm text-gray-600 dark:text-gray-300">Administra cuentas de usuario y permisos</p>
                        </a>
                        
                        <a href="/admin/reports" class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg border border-gray-200 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-600 transition">
                            <h3 class="font-semibold text-gray-800 dark:text-white">Reportes</h3>
                            <p class="text-sm text-gray-600 dark:text-gray-300">Visualiza informes y estadísticas del sistema</p>
                        </a>
                        
                        <a href="/admin/logs" class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg border border-gray-200 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-600 transition">
                            <h3 class="font-semibold text-gray-800 dark:text-white">Logs del Sistema</h3>
                            <p class="text-sm text-gray-600 dark:text-gray-300">Revisa la actividad y errores del sistema</p>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Estado del sistema -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
                <div class="p-6">
                    <h2 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">Estado del Sistema</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <ConnectionStatus />
                        </div>
                        <div>
                            <CacheStats />
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    
    <script>
    // Scripts para la página de administración
    document.addEventListener('DOMContentLoaded', () => {
        console.log('Panel de administración cargado');
    });
    </script>
</body>
</html>